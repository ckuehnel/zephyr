menu "Framebuffer"

config CHARACTER_FRAMEBUFFER
	bool "Character framebuffer for monochrome dot matrix displays"
	help
	  Character framebuffer for monochrome dot matrix displays.

if CHARACTER_FRAMEBUFFER

config CHARACTER_FRAMEBUFFER_USE_DEFAULT_FONTS
	bool "Use default fonts"
	default y
	help
	  Use default fonts.

config SYS_LOG_FRAMEBUFFER_LEVEL
	int "Display framebuffer log level"
	depends on SYS_LOG
	default 0
	help
	  Sets log level for display framebuffer.

	  Levels are:

	  - 0 OFF, do not write

	  - 1 ERROR, only write SYS_LOG_ERR

	  - 2 WARNING, write SYS_LOG_WRN in addition to previous level

	  - 3 INFO, write SYS_LOG_INF in addition to previous levels

	  - 4 DEBUG, write SYS_LOG_DBG in addition to previous levels

endif

endmenu
